<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!-- ALL < DEBUG < INFO < WARN < ERROR < FATAL < OFF -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- ********** APPENDERS DEFINITION (begin) ********** -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="OURANOS_REST_API_AUDIT_FILE_APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${CHEMIN_LOG}/ouranos-audit.log" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="OURANOS-AUDIT %d{yyyy-MM-dd HH:mm:ss,SSS} %X{url} %X{method} %X{http_status} %X{execution_time}%n" />
		</layout>
	</appender>

	<appender name="ASYNC_OURANOS_REST_API_AUDIT_FILE_APPENDER"
		class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="OURANOS_REST_API_AUDIT_FILE_APPENDER" />
	</appender>

	<appender name="OURANOS_TRACE_INVOCATION_FILE_APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${CHEMIN_LOG}/ouranos-trace-invocation.log" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="OURANOS-TRACE-INVOCATION %d{yyyy-MM-dd HH:mm:ss,SSS} %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="ASYNC_OURANOS_TRACE_INVOCATION_FILE_APPENDER"
		class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="OURANOS_TRACE_INVOCATION_FILE_APPENDER" />
	</appender>

	<appender name="OURANOS_MONITOR_FILE_APPENDER" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${CHEMIN_LOG}/ouranos-monitor.log" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="OURANOS-MONITOR %d{yyyy-MM-dd HH:mm:ss,SSS} - %m%n" />
		</layout>
	</appender>

	<appender name="ASYNC_OURANOS_MONITOR_FILE_APPENDER" class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="OURANOS_MONITOR_FILE_APPENDER" />
	</appender>

	<!-- ********** LOGGERS DEFINITION (begin) ********** -->
	<root>
		<priority value="INFO" />
		<appender-ref ref="console" />
	</root>

	<logger name="OURANOS_AUDIT" additivity="false">
		<level value="INFO" />
		<appender-ref ref="ASYNC_OURANOS_REST_API_AUDIT_FILE_APPENDER" />
	</logger>

	<logger name="OURANOS_TRACE_INVOCATION" additivity="false">
		<level value="INFO" />
		<appender-ref ref="ASYNC_OURANOS_TRACE_INVOCATION_FILE_APPENDER" />
	</logger>

	<logger name="OURANOS_MONITORE" additivity="false">
		<level value="INFO" />
		<appender-ref ref="ASYNC_OURANOS_MONITOR_FILE_APPENDER" />
	</logger>

</log4j:configuration>