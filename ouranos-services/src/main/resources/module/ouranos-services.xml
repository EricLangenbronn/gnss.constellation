<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="velocity-conf.xml" />

	<bean id="propertiesService" class="fr.gnss.constellation.ouranos.service.PropertiesService" />

	<bean id="configurationService"
		class="fr.gnss.constellation.ouranos.service.ConfigurationService">
		<property name="parametreService" ref="propertiesService"></property>
	</bean>

	<bean id="computationService"
		class="fr.gnss.constellation.ouranos.service.computation.ComputationService" />

	<bean id="requestResourceService"
		class="fr.gnss.constellation.ouranos.service.resource.request.RequestResourceService" />

	<bean id="responseResourceService"
		class="fr.gnss.constellation.ouranos.service.resource.response.ResponseResourceService">
		<property name="templateService" ref="templateService" />
	</bean>

	<bean id="orbitsDataDownloadService"
		class="fr.gnss.constellation.ouranos.service.orbitdata.OrbitsDataDownloadService">
		<property name="sp3Dao" ref="sp3Dao" />
		<property name="orbitsDataDownloadDao" ref="orbitsDataDownloadDao" />
		<property name="propertiesService" ref="propertiesService" />
	</bean>

	<bean id="orbitsDataService"
		class="fr.gnss.constellation.ouranos.service.orbitdata.OrbitsDataService">
		<property name="sp3Dao" ref="sp3Dao" />
		<property name="orbitsDataDownloadService" ref="orbitsDataDownloadService" />
	</bean>

	<bean id="sateliteVisibleService"
		class="fr.gnss.constellation.ouranos.service.process.satelitevisible.SateliteVisibleService">
		<property name="orbitsDataService" ref="orbitsDataService" />
		<property name="computationService" ref="computationService" />
	</bean>

	<bean id="processResourceService"
		class="fr.gnss.constellation.ouranos.service.resource.ProcessResourceService">
		<property name="requestResourceService" ref="requestResourceService" />
		<property name="responseResourceService" ref="responseResourceService" />
		<property name="sateliteVisibleService" ref="sateliteVisibleService" />
	</bean>

	<bean id="templateService"
		class="fr.gnss.constellation.ouranos.service.template.TemplateService">
		<property name="velocityEngine" ref="velocityEngine" />
	</bean>

</beans>